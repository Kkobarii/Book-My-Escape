@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">@ViewData["Title"]</h1>
@model RegisterViewModel
@using (Html.BeginForm("Index", "Register", FormMethod.Post))
{
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.FirstName, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.FirstName)</div>
		</div>
		@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First name" })
	</div>
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.LastName, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.LastName)</div>
		</div>
		@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last name" })
	</div>

	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.Email, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Email)</div>
		</div>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
	</div>
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.PhoneNumber)</div>
		</div>
		@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone number" })
	</div>

	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.Password, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Password)</div>
		</div>
		@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })		
	</div>
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.RepeatPassword, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.RepeatPassword)</div>
		</div>
		@Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Repeat Password" })		
	</div>

	<div class="mt-2">
		<button type="submit" class="btn clr-btn-primary">Submit</button> <text class="margin-label text-danger">@ViewBag.Message</text>
	</div>
}