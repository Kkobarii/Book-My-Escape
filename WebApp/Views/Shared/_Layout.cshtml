<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book My Escape</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <style>
        .clr-primary {
            color: #fff;
            background-color: #3285d2;
            border-color: #3285d2;
        }
        .clr-btn-primary {
            color: #fff;
            background-color: #3285d2;
            border-color: #3285d2;
        }
        .clr-btn-primary:hover {
          color: #fff;
          background-color: #1d78cd;
          border-color: #1d78cd;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light clr-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><b>Book My Escape</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="EscapeRooms" asp-action="Index">Escape Rooms</a>
                                </li>
                        @{
                            if (LoggedInSingleton.Instance.LoggedInUser != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Reservations" asp-action="Index">Reservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div>
                @{
                    if (LoggedInSingleton.Instance.LoggedInUser == null)
                    {
                        <label class="margin-label">Not logged in</label>
                        <button class="btn bg-white margin-label" onclick="location.href='@Url.Action("Index","Login")'">Log In</button>
                        <button class="btn bg-white margin-label" onclick="location.href='@Url.Action("Index","Register")'">Register</button>
                    }
                    else
                    {
                        <label class="margin-label">Logged in as @LoggedInSingleton.Instance.LoggedInUser.ToString()</label>
						<button class="btn bg-white margin-label" onclick="location.href='@Url.Action("Logout","Home")'">Log Out</button>					
                    }
                }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Book My Escape - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
