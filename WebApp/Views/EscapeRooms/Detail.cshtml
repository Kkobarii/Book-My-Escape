@using DataLayer;
@using DataLayer.Models;

@{    
    ViewData["Title"] = ViewBag.Room.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Room room = ViewBag.Room;
}

<h1 class="display-4">@room.Name</h1>
<div class="container-md">
    <div class="mt-3 border border-secondary p-3 rounded-3">
        <label>@room.Description</label>
    </div>
@foreach (Review review in ViewBag.Reviews)
{
    <div class="card mt-3">
        <div class="card-header clr-primary text-white">
            <h4>@review.User</h4>
        </div>
        <div class="card-body">
            <p class="card-text border border-secondary rounded-3 p-3">@review.Text</p>
			<p class="card-text">Rating: @review.Rating</p>
        </div>
    </div>
}
</div>
