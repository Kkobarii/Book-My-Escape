@using DataLayer.Models;
@{
    ViewData["Title"] = "My Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col"><h1 class="display-4">@ViewData["Title"]</h1></div>
    <div class="col text-end align-text-bottom"><a href="@Url.Action("Export", "Reservations", new { })" class="btn clr-btn-primary m-2">Export reservations</a></div>
</div>

<div class="container-md">
@foreach (Reservation reservation in ViewBag.Reservations)
    {
        <div class="card mt-3">
            <div class="card-header clr-primary text-white">
                <h4>@reservation.Room.Name</h4>
            </div>
            <div class="card-body">
                <p class="card-text border border-secondary p-3 rounded-3">@reservation.Room.Description</p>
                <p class="card-text">Date: @reservation.CheckIn - @reservation.CheckOut <br/>
                Player count: @reservation.PlayerCount</p>
                <a href="@Url.Action("DeleteReservation", "Reservations", new { id = reservation.Id })" class="btn clr-btn-primary m-2">Delete reservation</a>
                <a href="@Url.Action("CreateReview", "Reservations", new { id = reservation.Id })" class="btn clr-btn-primary m-2">Create review</a>
            </div>
        </div>
    }
</div>