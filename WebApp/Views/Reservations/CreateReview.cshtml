@using DataLayer;
@using DataLayer.Models;

@{
	ViewData["Title"] = "Create a review";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<div class="container-md">

        <div class="card mt-3">
            <div class="card-header clr-primary text-white">
                <h4>@ViewBag.Reservation.Room.Name</h4>
            </div>
            <div class="card-body">
                <p class="card-text">@ViewBag.Reservation.Room.Description</p>
            </div>
        </div>

        <div>
            @model ReviewViewModel
			@using (Html.BeginForm("CreateReview", "Reservations", FormMethod.Post))
			{
				<div class="form-group mt-2">
					<div class="row">
						<div class="col-3">@Html.LabelFor(m => m.Text, new { @class = "form-label pull-left" })</div>						
						<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Text)</div>
					</div>
					@Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
				</div>
				<div class="form-group mt-2">
					<div class="row">
						<div class="col-3">@Html.LabelFor(m => m.Rating, new { @class = "form-label pull-left" })</div>						
						<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Rating)</div>
					</div>
					@Html.TextBoxFor(m => m.Rating, new { @class = "form-control", @type = "number", @min = 1, @max = 5 })
				</div>

				<div class="mt-2">
					<button type="submit" class="btn clr-btn-primary">Submit</button> <label class="text-danger">@ViewBag.Message</label>
				</div>
			}
        </div>

</div>
