@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Login Form</h1>
@model LoginViewModel
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.Email, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Email)</div>
		</div>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter username" })
	</div>
	<div class="form-group mt-2">
		<div class="row">
			<div class="col-3">@Html.LabelFor(m => m.Password, new { @class = "form-label pull-left" })</div>						
			<div class="col text-end text-danger">@Html.ValidationMessageFor(x => x.Password)</div>
		</div>
		@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })		
	</div>

	<div class="mt-2">
		<button type="submit" class="btn btn-primary">Submit</button> <text class="margin-label">@ViewBag.Message</text>
	</div>
}
